@{
ViewData["Title"] = "Home Page";
}
<div class="dashboard" ng-app="dashboard" ng-controller="dashboard.controller">
    <div class="chart-company">
        <h5 class="title">Pelanggaran Perusahaan</h5>
        <div id="chart-canvas">
            <canvas id="myChart"></canvas>
        </div>
    </div>
    <div class="chart-kind">
        <h4 class="title">Pelanggaran Per Jenis</h4>
        <div id="chart-canvas">
            <canvas id="dounatChart"></canvas>
        </div>
    </div>
    <div class="best-perform">
        <h5 class="title">Best Perform</h5>
        <div class="employes vertical-scroll">
            <div class="employe" id="employee" ng-repeat="item in source">
                <div class="employe-photo">
                    <img ng-src="/images/profiles/{{item.photo}}">
                </div>
                <div class="employe-content">
                    <div class="employe-data">
                        <div class="form-data">
                            <div class="content-label">Name</div>
                            <div class="content-value">{{item.namakaryawan}} </div>
                        </div>
                        <div class="form-data">
                            <div class="content-label">Job</div>
                            <div class="content-value">{{item.jabatan}} </div>
                        </div>
                        <div class="form-data">
                            <div class="content-label">Sub Company</div>
                            <div class="content-value">{{item.perusahaan.namaperusahaan | limitTo:20}} </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
    <div class="today">
        <h5 class="title">Pelanggaran Hari Ini</h5>
        <div class="today-container"  >
            <div class="today-item" id="item{{$index+1}}" ng-repeat="item in datas">
                <div class="today-title">
                    {{item.level}}
                </div>
            <hr/>
            <div class="today-content">{{item.today}}</div>
        </div>
    </div>
</div>
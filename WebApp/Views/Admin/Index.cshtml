          <li ui-sref="karyawan" ><img src="/images/src/karyawan.png"/><i class="menu-text">Karyawan</i></li>
          <li ui-sref="pelanggaran-baru" ><img src="/images/src/TambahPelanggaran.png"/><i class="menu-text">Pelanggaran Baru</i></li>
        </ul>
        <div class="close-menu" id="close-menu"><img id="close-icon" src="/images/src/Icon ionic-md-arrow-back.png"/></div>
       </div>
      </div>             
    </div>

     <div class="main-right">
        <ui-view></ui-view>
    </div>
</div>


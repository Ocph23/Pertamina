@{
    ViewData["Title"] = "Home Page";
      Layout = "~/Views/Shared/_AdminLayout.cshtml"; 
}

<div class="admin" ng-app="admin">
    <div class="main-left">
      <div class="menus">
        <div class="menus-header">
          <img id="avatar" src="/images/src/noimage.png"/>
          <div class="user-name" id="userName"></div>
          <div class="user-job" id="role"></div>
        </div>
       <div class="menus-body">
          <ul>
          <li ui-sref="home" ><img src="/images/src/Iconfeather-home.png"/><i class="menu-text">Home</i></li>
          <li ui-sref="periode" ><img src="/images/src/periode.png"/><i class="menu-text">Periode</i></li>
          <li ui-sref="jenis" ><img src="/images/src/JenisPelanggaran.png"/><i class="menu-text">Jenis Pelanggaran</i></li>
